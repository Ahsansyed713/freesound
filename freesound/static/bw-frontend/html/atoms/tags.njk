{% macro tag(tagName, size=1, classname="") %}
  <button class="btn-inverse border-grey-light text-center no-border-radius padding-{{size}} no-text-wrap {{classname}} v-spacing-1 no-letter-spacing">
    {{ tagName }}
  </button>
{% endmacro %}

{% macro tags(allTags) %}
  {% for tagName in allTags %}
    {{ tag(tagName) }}
  {% endfor %}
{% endmacro %}