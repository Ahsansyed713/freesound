{% import './icons.njk' as icons %}
{% macro select(options, id) %}
  <div class="bw-select">
    <select id="{{ id }}">
      {% for option in options %}
        <option value="{{ option }}">{{ option }}</option>
      {% endfor %}
    </select>
    {{ icons.icon('chevron-up', 'bw-select__chevron') }}
  </div>
{% endmacro %}
